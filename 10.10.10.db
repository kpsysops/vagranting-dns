@   IN  SOA    dns.example.com. root.example.com. (
                                                1001    ;Serial     
                                                3H      ;Refresh    
                                                15M     ;Retry      
                                                1W      ;Expire     
                                                1D      ;Minimum TTL
                                                )

;DNS infromation
@      IN  NS    dns.example.com.

;Revers lookup for DNS
2  IN  PTR      dns.example.com.

;PTR Records ( IP Address -> HostName )
11     IN PTR www.example.com.
11     IN PTR nginx.example.com.
15     IN PTR mail.example.com.